<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/mitr"
        android:text="เกม"
        android:textSize="50sp"
        android:textStyle="bold"
        android:background="#ffd687"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/gamebtg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gameicon"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menubar"
        />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mitr"
        android:text="ออกกำลังกาย"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gamebtg"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/chatbtg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/chaticon"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/gamebtg"
        app:layout_constraintTop_toBottomOf="@+id/menubar"
        />

    <TextView
        android:id="@+id/nonggreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mitr"
        android:text="น้องเขียวขจี"
        android:textSize="30sp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/chatbtg"
        app:layout_constraintLeft_toRightOf="@+id/exercise"
        />

    <ImageView
        android:id="@+id/musicbtg"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/musicicon"
        app:layout_constraintBottom_toBottomOf="@+id/menubar"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/mitr"
        android:text="เขย่ากันหน่อย"
        android:textSize="30sp"
        android:layout_marginLeft="130dp"
        app:layout_constraintTop_toBottomOf="@+id/musicbtg"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>