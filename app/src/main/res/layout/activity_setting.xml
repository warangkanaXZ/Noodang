<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context=".settingActivity">

    <TextView
        android:id="@+id/setting_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/mitr"
        android:text="ตั้งค่า"
        android:textSize="50sp"
        android:textStyle="bold"
        android:background="#ffd687"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/mitr"
        android:text="แก้ไขโปรไฟล์"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_menu"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/edit_noti"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mitr"
        android:text="การแจ้งเตือน"
        android:textSize="25sp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop"/>

    <TextView
        android:id="@+id/Logout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mitr"
        android:text="ออกจากระบบ"
        android:textSize="25sp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_noti"
        android:layout_marginTop="20dp"
        tools:targetApi="lollipop"/>

    <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/profile"
    app:layout_constraintTop_toBottomOf="@+id/setting_menu"
    app:layout_constraintRight_toLeftOf="@id/edit_profile"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="150dp"
    />

    <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/alert"
    app:layout_constraintTop_toBottomOf="@+id/setting_menu"
    app:layout_constraintRight_toLeftOf="@id/edit_noti"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="210dp"
    />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/exit"
        app:layout_constraintTop_toBottomOf="@+id/setting_menu"
        app:layout_constraintRight_toLeftOf="@id/Logout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="270dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>